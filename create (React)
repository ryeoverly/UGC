                  <Upload className="w-4 h-4 text-blue-600" />
                  <span className="text-blue-600 font-medium">Upload File</span>
                  <input
                    type="file"
                    accept="image/*,video/*"
                    onChange={handleFileChange}
                    className="hidden"
                  />
